<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/iv_discount_list"
            android:src="@mipmap/tagpurple"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bg_image_discount"
            android:layout_marginVertical="25dp"
            android:layout_marginLeft="25dp"
            android:padding="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/tv_discountName_list"
            android:layout_toRightOf="@+id/iv_discount_list"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:text="Add Discount"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_percenDisc_list"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_below="@+id/tv_discountName_list"
            android:layout_width="400dp"
            android:layout_height="2dp"
            android:layout_marginLeft="95dp"
            android:background="@color/purple_light"/>
    </RelativeLayout>

</RelativeLayout>