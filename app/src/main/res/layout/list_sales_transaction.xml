<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_sales_transaction"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/iv_sales_transaction"
            android:src="@mipmap/img"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_nameProduct_transaction"
            android:layout_toRightOf="@+id/iv_sales_transaction"
            android:text="Bakso"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_stock_transaction"
            android:layout_below="@+id/tv_nameProduct_transaction"
            android:layout_toRightOf="@+id/iv_sales_transaction"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            android:text="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_slash"
            android:layout_toRightOf="@+id/tv_stock_transaction"
            android:layout_below="@+id/tv_nameProduct_transaction"
            android:text="|"
            android:textColor="@color/black"
            android:layout_marginHorizontal="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_sellPrice_transaction"
            android:layout_toRightOf="@+id/tv_slash"
            android:layout_below="@+id/tv_nameProduct_transaction"
            android:layout_marginTop="1dp"
            android:text="Rp. "
            android:textColor="@color/purple_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/btn_countTransaction"
            android:text="1"
            android:padding="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_count_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>