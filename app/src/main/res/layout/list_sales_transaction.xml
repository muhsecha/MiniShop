<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:id="@+id/rl_sales_transaction"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/iv_sales_transaction"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp"
            android:padding="10dp"
            android:src="@mipmap/img" />

        <TextView
            android:id="@+id/tv_nameProduct_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/iv_sales_transaction"
            android:text="Bakso"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_stock_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nameProduct_transaction"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/iv_sales_transaction"
            android:text="20" />

        <TextView
            android:id="@+id/tv_slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nameProduct_transaction"
            android:layout_marginHorizontal="5dp"
            android:layout_toRightOf="@+id/tv_stock_transaction"
            android:text="|"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_sellPrice_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nameProduct_transaction"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/tv_slash"
            android:text="Rp. "
            android:textColor="@color/purple_light" />

        <TextView
            android:id="@+id/tv_countTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_count_item"
            android:padding="8dp"
            android:text="1"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/iv_sales_transaction"
            android:layout_marginTop="4dp"
            android:background="#BDBDBD" />
    </RelativeLayout>

</RelativeLayout>