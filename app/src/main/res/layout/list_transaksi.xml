<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_time_listTrans"
            android:layout_toRightOf="@+id/iv_discount_list"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="11:24:56"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_date_listTrans"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/purple_light"
            android:text="2021-02-27"
            android:layout_below="@+id/tv_time_listTrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_atasNama_listTrans"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:text="Santoso"
            android:layout_toLeftOf="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <Button
            android:id="@+id/btn_delete"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/delete"/>

    </RelativeLayout>

</RelativeLayout>